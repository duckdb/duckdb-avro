require avro

statement ok
COPY (
	select {
		'a': {
			'child': 21
		},
		'b': {
			'child': true
		}
	} my_struct
) TO '__TEST_DIR__/tmp.avro' (
	FORMAT 'avro'
);

query I
select * from read_avro('__TEST_DIR__/tmp.avro');
----
{'a': {'child': 21}, 'b': {'child': true}}

# The ROOT_NAME (top level record) is not subject to this limitation
statement ok
COPY (
	select {
		'a': {
			'field': true
		}
	} structure
) TO '__TEST_DIR__/tmp2.avro' ( ROOT_NAME 'a', FORMAT 'avro');

query I
select * from read_avro('__TEST_DIR__/tmp2.avro');
----
{'a': {'field': true}}

