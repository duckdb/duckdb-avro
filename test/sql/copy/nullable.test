# items in structs can also be nullable
statement ok
COPY (
	select
          1 manifest_entry,
          {
          	'content': 1,
          } data_file_not_nullable,
) TO '__TEST_DIR__/field_ids_3.avro' (
	FIELD_IDS {
		'manifest_entry': 0,
		'data_file_not_nullable': {
		    '__duckdb_field_id': 1,
		    '__duckdb_nullable': false,
		    'content': {
		        '__duckdb_field_id': 2,
		        '__duckdb_nullable': false
		    }
		}
	},
	ROOT_NAME 'test'
);

statement ok
create table t1 as select
1 manifest_entry,
{
	'content': 1,
} data_file_not_nullable,
{
	'content': 2,
} data_file_nullable;

statement ok
COPY t1 TO '__TEST_DIR__/field_ids_4.avro' (
	FIELD_IDS {
		'manifest_entry': {
			'__duckdb_field_id': 0
		},
		'data_file_not_nullable': {
		    	'__duckdb_field_id': 2,
		    	'__duckdb_nullable': false,
		    	'content': 3
		},
        'data_file_nullable': {
                '__duckdb_field_id': 4,
                'content': 5
        }
	},
	ROOT_NAME 'manifest_entry'
);

query III
